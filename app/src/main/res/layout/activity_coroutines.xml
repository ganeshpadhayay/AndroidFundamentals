<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".coroutines.CoroutinesActivity">

    <Button
        android:layout_width="match_parent"
        android:id="@+id/button_simple_coroutine"
        android:layout_height="wrap_content"
        android:text="Simple Coroutine"/>


    <Button
        android:layout_width="match_parent"
        android:id="@+id/button_coroutine_as_a_job"
        android:layout_height="wrap_content"
        android:text="Coroutine as a Job"/>


    <Button
        android:layout_width="match_parent"
        android:id="@+id/button_parallel_background_calls"
        android:layout_height="wrap_content"
        android:text="Parallel Background Calls"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/button_sequential_background_calls"
        android:layout_height="wrap_content"
        android:text="Sequential Background Calls"/>

</LinearLayout>